<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="#EAF5EB">

    <View
        android:id="@+id/head_line"
        style="@style/detail_horizontal_line"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_route"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/head_line"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="#46A667"
        android:gravity="center"
        android:text="线路1"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_timeframe"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/head_line"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tv_route"
        android:layout_toRightOf="@id/tv_route"
        android:gravity="center"
        android:text="21:39发→22:21到"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_elapsed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_timeframe"
        android:layout_below="@id/head_line"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tv_timeframe"
        android:layout_toRightOf="@id/tv_timeframe"
        android:text="42分（乘车39分）"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_transfer_times"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/head_line"
        android:gravity="center"
        android:text="换乘：1次"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@id/tv_timeframe"
        android:layout_alignStart="@id/tv_timeframe"
        android:layout_below="@id/tv_timeframe"
        android:gravity="center"
        android:text="票价：6元"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_transfer_times"
        android:gravity="center"
        android:text="32.2km"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>